<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="<%= description %>">
    <meta name="keywords" content="<%= keywords %>">
    <meta name="author" content="<%= author %>">

    <title>Ataraxy Clothing -
        <%= title %>
    </title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.3.5/jquery.fancybox.min.css" />
    <link rel="stylesheet" href="/css/themereset.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <script src="//code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.3.5/jquery.fancybox.min.js"></script>
</head>

<body>
    <!-- <div class="ajaxbg">
        <div class="ajaxinner">
            <h3>You are now being redirected to paypal...</h3>
        </div>
    </div> -->

    <nav class="header">
        <a class="header-brand" href="/">
            <p>Ataraxy</p>
            <p>Clothing</p>
        </a>
        <div class="header-navbar" id="">
            <ul class="header-navbar-actualOne">
                <% pages.forEach(function(page){ %>
                    <% if (page.slug == "home"){ %>
                        <li>
                            <a class="nav-link" href="/">
                                <%= page.title.toLowerCase() %>
                            </a>
                        </li>
                        <% } else{ %>
                            <% if (page.parent == "home") { %>
                                <li>
                                    <a class="nav-link" href="/<%= page.slug %>">
                                        <%= page.title.toLowerCase() %>
                                    </a>
                                </li>
                                <% } %>
                                    <% } %>
                                        <% }) %>
            </ul>
            <ul class="header-navbar-actualTwo">
                <li>
                    <a class="nav-link" href="/cart/checkout">My Cart (
                        <% if (typeof cart !== "undefined") { %>
                            <%= cart.length %>
                                <% } else { %>
                                    0
                                    <% } %>
                                        )</a>
                </li>
                <% if (user) { %>
                    <li>
                        <a class="nav-link" href="/users/logout">Hi,
                            <%= user.username %> ( Logout )</a>
                    </li>
                    <% } else{ %>
                        <li>
                            <a class="nav-link" href="/users/register">Register</a>
                        </li>
                        <li>
                            <a class="nav-link" href="/users/login">Log in</a>
                        </li>
                        <% } %>
                            <% if (user && user.admin == 1) { %>
                                <li>
                                    <a class="nav-link" href="/admin/pages">Admin Area</a>
                                </li>
                                <% } %>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">
        <div>
            <div class="catgories-sidebar">
                <h3>Categories</h3>
                <ul class="categories-sidebar-categories">
                    <li class="list-group-item">
                        <a href="/blog">All blogs</a>
                    </li>
                    <% blogcategories.forEach(function(c){ %>
                        <li class="list-group-item">
                            <a href="/blog/<%= c.slug %>">
                                <%= c.title %>
                            </a>
                        </li>
                        <% }); %>
                </ul>
            </div>
        </div>