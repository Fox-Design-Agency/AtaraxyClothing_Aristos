<% include ../_layouts/productHeader %>

    <div class="product__holder">
        <div class="">
            <img class="product__image" src="/product_images/<%= product.id %>/<%= product.image %>" alt="">
            <div class="">
            <ul class="gallery">
                <% galleryImages.forEach(function(image){ %>
                    <% if (image != "thumbs") { %>
                        <li>
                            <a data-fancybox="Gallery" href="/product_images/<%= product.id %>/gallery/<%= image %>">
                                <img src="/product_images/<%= product.id %>/gallery/thumbs/<%= image %>" alt="">
                            </a>
                        </li>
                        <% } %>
                            <% }) %>
            </ul>
        </div>
        </div>
        <div class="">
            <h1 class="product__header">
                <%= product.title %>
            </h1>
            <p class="product__price">
                $
                <%= parseFloat(product.price).toFixed(2) %>
            </p>
            <% if(printfulPluginExists){ %>
                <form  method="post" action="/cart/add/<%= product.slug %>">
                     
                    <label>
                                    Select Color:
                                </label>
                                 <div class="product__color-size-holder"> 
                    <select  name="color" class="color-container" required>
                        <% product.color.forEach((color)=>{ %>
                                <option class="color-size-radio" value="<%= color %>" id="<%= color %>"><%= color %></option>
                            
                            <% }) %>
</select>
                    </div> 
                   
                    <label>
                    Select Size:
                </label>
                    <div class="product__color-size-holder"> 
                    <select name="size" class="size-container" required>
                        <% product.sizes.forEach((size)=>{ %>
                                <option class="color-size-radio" value="<%= size %>"  id="<%= size %>"><%= size %></option>                           
                            <% }) %> 
                            </select>

                    </div>
                
                <div class="product__content">
                    <%- product.content %>
                </div>
                <button type="submit" class="button button__product-add">Add to Cart</button>
            </form>
                <% }else {%>

                    <p class="product__content">
                        <%- product.content %>
                    </p>
                    <p class="button__product-add">
                            <a href="/cart/add/<%= product.slug %>">Add to cart</a>

                    </p>
                    <% } %>
        </div>
        

    </div>



    <% include ../_layouts/footer %>